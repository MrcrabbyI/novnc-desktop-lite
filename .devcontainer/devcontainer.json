{
  "name": "Codespace with GUI (Xpra)",
  "image": "ubuntu:22.04",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "Desktop (Xpra)",
      "onAutoForward": "openPreview"
    }
  },
  "postCreateCommand": "apt update && apt install -y xpra fluxbox xterm && apt clean",
  "postStartCommand": "/bin/bash .devcontainer/postStartCommand.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
